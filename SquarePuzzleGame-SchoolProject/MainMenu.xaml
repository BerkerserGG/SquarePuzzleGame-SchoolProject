<UserControl x:Class="SquarePuzzleGame_SchoolProject.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SquarePuzzleGame_SchoolProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="mainMenuButton" TargetType="Button">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </UserControl.Resources>
    <StackPanel>
            <Button Content="Yeni Oyun" Style="{StaticResource mainMenuButton}" Click="NewGame_Button_Click" />
            <Button Content="En Yüksek Skor" Style="{StaticResource mainMenuButton}" Click="BestScore_Button_Click"/>
    </StackPanel>
</UserControl>
